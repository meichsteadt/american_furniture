<div class="container">
  <div class="row">
    <div class="box promo">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
            <strong><%= @category %></strong>
        </h2>
        <hr>
      </div>
      <div class="col-lg-12 text-center">
          <p>At <%= @store.name %> we are always running into great deals on products. And we think it's our obligation to pass those savings on to our customers! Come look at our lineup of current promotional products.</p>
      </div>
      <% @products.each do |product| %>
        <% if product.description != "Â "%>
          <%= link_to(product_path(product)) do %>
            <div class="col-lg-4 product">
              <div class="image" style="background: url(<%= product.image %>); background-size: cover; background-position: center center;"></div>
              <div class="info">
                <p><%= product.name %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
