<div class="container">
  <div id="carousel-example-generic" class="carousel slide" style="margin-top: 20px">
    <!-- Indicators -->
    <ol class="carousel-indicators hidden-xs">
      <% @slideshow.each_with_index do |image, index| %>
      <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" <% if index == 0 %> class="active" <% end %>></li>
      <% end %>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <div class="col-xs-4 product-slide">
          <img class="" src="<%= @slideshow[0].image %>" alt="">
        </div>
        <div class="col-xs-4">
          <div class="cover"></div>
          <div class="promo">
            <img src="http://www.mentalhealthamerica.net/sites/default/files/styles/interior_page_banner/public/BackToSchoolHeader.png?itok=ehkyBAet" alt="" style="padding: 10px;" class="img-responsive">
            <h3>New year, <strong>New bedroom</strong></h3>
            <%= link_to '/bedroom' do %>
            <button class="promo-button">Shop Now</button>
            <% end %>
          </div>
        </div>
        <div class="col-xs-4 product-slide">
          <img class="flip" src="<%= @slideshow[1].image %>" alt="">
        </div>
      </div>
