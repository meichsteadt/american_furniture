  <div class="box" style="margin-top: 40px;">
    <div class="row">
      <div class="col-lg-12 text-center">
        <hr>
        <h2 class="brand-before">
          <small>Welcome to</small>
        </h2>
        <h1 class="brand-name"><%= @store.name %></h1>
        <hr class="tagline-divider">
      </div>
    </div>
    <div class="row">
      <h3 class="text-center lowercase">Shop by Category</h3>
      <%= link_to "/seating" do %>
      <div class="col-sm-3 shop-product product">
        <div class="safe-zone">
          <div class="image" style="background: url(<%= Product.find(46).image %>); background-size: cover; background-position: center center;"></div>
          <div class="info">
            <p>Living Room</p>
          </div>
        </div>
      </div>
      <% end %>
      <%= link_to "/bedroom" do %>
        <div class="col-sm-3 shop-product product">
          <div class="safe-zone">
            <div class="image" style="background: url(<%= Product.find(7).image %>); background-size: cover; background-position: center center;"></div>
            <div class="info">
              <p>Bedroom</p>
            </div>
          </div>
        </div>
      <% end %>
      <%= link_to "/dining" do %>
        <div class="col-sm-3 shop-product product">
          <div class="safe-zone">
            <div class="image" style="background: url(<%= Product.find(36).image %>); background-size: cover; background-position: center center;"></div>
            <div class="info">
              <p>Dining</p>
            </div>
          </div>
        </div>
      <% end %>
      <%= link_to "/mattresses" do %>
        <div class="col-sm-3 shop-product product">
          <div class="safe-zone">
            <div class="image" style="background: url('http://www.thedump.com/content/images/thumbs/0003184_meditations-enlightenment-queen-mattress_775.jpeg'); background-size: cover; background-position: center center;"></div>
            <div class="info">
              <p>Mattresses</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row" style="margin-top: 20px;">
      <h3 class="text-center lowercase">About Us</h3>
      <div class="col-md-7">
        <%= image_tag(@store.store_image, class: 'img-responsive img-border-left shadow img-full') %>
      </div>
      <div class="col-md-5">
        <p class="store-copy"><%= @store.store_copy %></p>
      </div>
    </div>
    <div class="clearfix"></div>
