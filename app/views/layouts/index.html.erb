<div class="container">
  <div id="carousel-example-generic" class="carousel slide" style="margin-top: 20px">
    <!-- Indicators -->
    <ol class="carousel-indicators hidden-xs">
      <% @slideshow.each_with_index do |image, index| %>
      <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" <% if index == 0 %> class="active" <% end %>></li>
      <% end %>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <%= link_to "/dining" do %>
          <%= image_tag "holiday-savings.jpg" %>
        <% end %>
      </div>
      <div class="item mattress-quiz">
        <%= link_to mattresses_path do %>
          <h2>Find your perfect mattress in minutes</h2>
          <button class="promo-button">Shop Mattresses</button>
          <img class="" src="https://www.goodbed.com/media/pictures/mattresses/serta/serta-picture-30.jpg" alt="">
        <% end %>
      </div>
  </div>
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="icon-next"></span>
  </a>
</div>
  <!-- Controls -->

  <div class="box" style="margin-top: 40px;">
    <div class="row">
      <div class="col-lg-12 text-center">
        <hr>
        <h2 class="brand-before">
          <small>Welcome to</small>
        </h2>
        <h1 class="brand-name"><%= @store.name %></h1>
        <hr class="tagline-divider">
      </div>
    </div>
    <div class="row">
      <h3 class="text-center lowercase">Shop by Category</h3>
      <%= link_to "/seating" do %>
      <div class="col-sm-3 shop-product product">
        <div class="safe-zone">
          <div class="image" style="background: url('https://www.foagroup.com/media/catalog/product/cache/1/image/040ec09b1e35df139433887a97daa66f/s/m/sm8822-sf.jpg'); background-size: cover; background-position: center center;"></div>
        </div>
        <div class="info">
          <p>Living Room</p>
        </div>
      </div>
      <% end %>
      <%= link_to "/bedroom" do %>
        <div class="col-sm-3 shop-product product">
          <div class="safe-zone">
            <div class="image" style="background: url('https://www.homelegance.com/wp-content/uploads/2017/03/1707-1__11-750x500.jpg'); background-size: cover; background-position: center center;"></div>
          </div>
          <div class="info">
            <p>Bedroom</p>
          </div>
        </div>
      <% end %>
      <%= link_to "/dining" do %>
        <div class="col-sm-3 shop-product product">
          <div class="safe-zone">
            <div class="image" style="background: url('http://www.urbanstyles.net/media/catalog/product/cache/1/image/900x600/9df78eab33525d08d6e5fb8d27136e95/f/a/farmhouse_set.jpg'); background-size: cover; background-position: center center;"></div>
          </div>
          <div class="info">
            <p>Dining</p>
          </div>
        </div>
      <% end %>
      <%= link_to "/mattresses" do %>
        <div class="col-sm-3 shop-product product">
          <div class="safe-zone">
            <div class="image" style="background: url('http://www.thedump.com/content/images/thumbs/0003184_meditations-enlightenment-queen-mattress_775.jpeg'); background-size: cover; background-position: center center;"></div>
          </div>
          <div class="info">
            <p>Mattresses</p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row" style="margin-top: 20px;">
      <h3 class="text-center lowercase">About Us</h3>
      <div class="col-md-7">
        <%= image_tag(@store.store_image, class: 'img-responsive img-border-left shadow img-full') %>
      </div>
      <div class="col-md-5">
        <p class="store-copy"><%= @store.store_copy %></p>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>

<!-- Script to Activate the Carousel -->
<script>
$('.carousel').carousel({
    interval: 000 //changes the speed
})
</script>
