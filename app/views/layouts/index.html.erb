<div class="container">
  <div id="carousel-example-generic" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators hidden-xs">
      <% @slideshow.each_with_index do |image, index| %>
      <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" <% if index == 0 %> class="active" <% end %>></li>
      <% end %>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <% @slideshow.each_with_index do |image, index| %>
      <% if index == 0 %>
      <div class="item active">
        <div class="col-sm-4">
          <img class="" src="<%= image %>" alt="">
        </div>
        <div class="col-sm-4 promo">
          <p>hi</p>
        </div>
        <div class="col-sm-4">
          <img class="" src="<%= image %>" alt="">
        </div>
      </div>
      <% else %>
      <div class="item">
        <img class="img-responsive img-full" src="<%= image %>" alt="">
      </div>
      <%end %>
      <% end %>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
      <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
      <span class="icon-next"></span>
    </a>
  </div>

</div>




