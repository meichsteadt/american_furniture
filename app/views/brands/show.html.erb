<div class="hero">
  <img class="bg" src="<%= @brand.image %>" alt="">
  <h1><%= @brand.name %></h1>
</div>

  <div class="container">
    <div class="row">
      <iframe class="brand-video" src="<%= @brand.video %>"></iframe>
    </div>
  </div>

<div class="clearfix">
  <div class="col-md-4">
    <div class="box">
      <%= form_for(@search) do |f| %>
      <%= hidden_field_tag :id, @brand.id %>
        <div class="form-group">
          <h3>Price</h3>
          <%= f.number_field :min, placeholder: "min" %>
          <p>to</p>
          <%= f.number_field :max, placeholder: "max" %>
        </div>
        <hr>
        <div class="form-group">
          <h3>Size</h3>
          <%= f.radio_button :size, :all %>
          <%= f.label :size_all, "All Sizes" %>
          <br>
          <%= f.radio_button :size, :twin %>
          <%= f.label :size_twin, "Twin" %>
          <br>
          <%= f.radio_button :size, "full" %>
          <%= f.label :size_full, "Full" %>
          <br>
          <%= f.radio_button :size, "queen" %>
          <%= f.label :size_queen, "Queen" %>
          <br>
          <%= f.radio_button :size, "eastern_king" %>
          <%= f.label :size_eastern_king, "Eastern King" %>
          <br>
          <%= f.radio_button :size, "cal_king" %>
          <%= f.label :size_cal_king, "Cal King" %>
        </div>
        <hr>
        <div class="form-group">
          <h3>Features</h3>
          <%= f.radio_button :features, "all" %>
          <%= f.label :all, "All Features" %>
          <br>
          <%= f.radio_button :features, "foam" %>
          <%= f.label :features_foam, "Memory Foam" %>
          <br>
          <%= f.radio_button :features, "latex" %>
          <%= f.label :features_latex, "Latex" %>
          <br>
          <%= f.radio_button :features, "pocketed_coil" %>
          <%= f.label :features_pocketed_coil, "Pocketed Coil" %>
          <br>
          <%= f.radio_button :features, "innerspring" %>
          <%= f.label :features_innerspring, "Innerspring" %>
          <br>
        </div>
        <%= f.submit "Search", class: "promo-button promo-button-sm" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="box clearfix">
      <% if @mattresses.length > 0 %>
        <% @mattresses.each do |mattress| %>
          <div class="col-md-6 product">
            <img class="img-responsive" src="<%= mattress.image %>" alt="">
          </div>
        <% end %>
      <% else %>
        <h1>Sorry, no products match those criteria</h1>
      <% end %>
    </div>
  </div>
</div>
